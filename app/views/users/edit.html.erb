<% provide(:title, "Update Profile") %>
<section class="user-settings container">
  <h1>Update your profile</h1>
  
  <%= render 'edit_user_form' %>
  
  <% if current_user?(@user) %>
    <%= link_to "Delete my account", @user, method: :delete,
                                    data: { confirm: "You're about to delete your account. All your data will be lost. Are you sure you want to do this?" } %>
  <% end %>

</section>